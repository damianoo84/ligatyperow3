{% extends 'base.html.twig' %}

{% block title %}Statistic index{% endblock %}

{% block body %}
    <h1>Statistic index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Match2</th>
                <th>Match4</th>
                <th>TotalPoints</th>
                <th>Position</th>
                <th>NumOfQue</th>
                <th>Created</th>
                <th>Updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for statistic in statistics %}
            <tr>
                <td>{{ statistic.id }}</td>
                <td>{{ statistic.match2 }}</td>
                <td>{{ statistic.match4 }}</td>
                <td>{{ statistic.totalPoints }}</td>
                <td>{{ statistic.position }}</td>
                <td>{{ statistic.numOfQue }}</td>
                <td>{{ statistic.created ? statistic.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ statistic.updated ? statistic.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_statistic_show', {'id': statistic.id}) }}">show</a>
                    <a href="{{ path('app_statistic_edit', {'id': statistic.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_statistic_new') }}">Create new</a>
{% endblock %}
