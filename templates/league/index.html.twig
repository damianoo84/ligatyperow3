{% extends 'base.html.twig' %}

{% block title %}League index{% endblock %}

{% block body %}
    <h1>League index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created</th>
                <th>Updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for league in leagues %}
            <tr>
                <td>{{ league.id }}</td>
                <td>{{ league.name }}</td>
                <td>{{ league.created ? league.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ league.updated ? league.updated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('league_show', {'id': league.id}) }}">show</a>
                    <a href="{{ path('league_edit', {'id': league.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('league_new') }}">Create new</a>
{% endblock %}
