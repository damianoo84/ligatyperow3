{% extends 'base.html.twig' %}

{% block title %}Matchday{% endblock %}

{% block body %}
    <h1>Matchday</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matchday.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ matchday.name }}</td>
            </tr>
            <tr>
                <th>DateFrom</th>
                <td>{{ matchday.dateFrom ? matchday.dateFrom|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateTo</th>
                <td>{{ matchday.dateTo ? matchday.dateTo|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ matchday.created ? matchday.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ matchday.updated ? matchday.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_matchday_index') }}">back to list</a>

    <a href="{{ path('app_matchday_edit', {'id': matchday.id}) }}">edit</a>

