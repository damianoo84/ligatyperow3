{% extends 'base.html.twig' %}

{% block title %}Lista drużyn{% endblock %}

{% block content %}
    <h1>Lista drużyn</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>Skrócona nazwa</th>
                <th>Liga</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ team.name }}</td>
                <td>{{ team.shortname }}</td>
                <td>{{ team.league }}</td>
                <td>
                    <a href="{{ path('team_show', {'id': team.id}) }}">Szczegóły</a>
                    <a href="{{ path('team_edit', {'id': team.id}) }}">Aktualizacja</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Nie znaleziono rekordów</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('team_new') }}">Dodaj nową drużynę</a>
{% endblock %}
