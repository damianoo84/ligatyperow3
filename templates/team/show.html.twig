{% block title %}Lista drużyn{% endblock %}

{% block content %}
    <h1>Szczegóły</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Nazwa</th>
